<h1>Posts</h1>
<div class="row">
  <ol>
    <% @posts.each do |post| %>
      <li>
        <p><%= post.title %>:</p> 
        <p><%= post.body %></p> 
        <% if signed_in? %>
          <p><em>Posted by <%= post.user.name %> on <%= post.user.created_at %></em></p>
        <% end %>
      </li>
    <% end %>
  </ol>
</div>
