<h1>New Post</h1>
<div class="row">
  <div class="col md-6">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit %>
    <% end %>
  </div>
</div>