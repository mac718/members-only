<h1>Sign In</h1>

<% if flash[:danger] %>
  <div class="alert alert-danger">
    <%= flash[:danger] %>
  </div>
<% end %>


<%= form_for :session do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In", class: 'btn btn-primary' %>
<% end %>

<%= link_to "Log out", signout_path, method: :delete %>

